<style>
    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
        color: var(--color-text);
    }

    .form-input,
    .form-select {
        width: 100%;
        padding: 0.875rem 1rem;
        background: var(--color-bg);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-md);
        color: var(--color-text);
        font-family: var(--font-sans);
        font-size: 1rem;
        transition: all var(--transition);
    }

    .form-input:focus,
    .form-select:focus {
        outline: none;
        border-color: var(--color-accent);
        box-shadow: 0 0 0 3px var(--color-accent-glow);
    }

    .form-input::placeholder {
        color: var(--color-text-muted);
    }

    .form-select option {
        background: var(--color-bg-secondary);
        color: var(--color-text);
    }

    .form-hint {
        font-size: 0.85rem;
        color: var(--color-text-muted);
        margin-top: 0.5rem;
    }

    .form-error {
        color: #ef4444;
        font-size: 0.85rem;
        margin-top: 0.5rem;
    }

    .form-actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .form-group.hidden {
        display: none !important;
    }
    
    #form-group-publicAddress {
        display: none;
    }
    
    #form-group-publicAddress.show {
        display: block !important;
    }

    /* Adresse destinataire pour dépôt */
    #deposit-address-group {
        display: none;
    }

    #deposit-address-group.show {
        display: block !important;
    }

    .deposit-address-box {
        display: flex;
        align-items: center;
        gap: 1rem;
        background: var(--color-bg-tertiary);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-md);
        padding: 0.875rem 1rem;
    }

    .deposit-address-value {
        font-family: var(--font-mono);
        font-size: 0.9rem;
        color: var(--color-accent-light);
        flex: 1;
        word-break: break-all;
        user-select: all;
    }

    .copy-address-btn {
        background: var(--color-accent);
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: var(--radius-sm);
        cursor: pointer;
        font-size: 0.85rem;
        font-weight: 500;
        transition: all var(--transition);
        white-space: nowrap;
    }

    .copy-address-btn:hover {
        background: var(--color-accent-light);
    }

    .copy-address-btn.copied {
        background: var(--color-success);
    }
</style>

{% for field in form %}
    {% if field.vars.name != '_token' %}
        <div class="form-group{% if field.vars.name == 'publicAddress' %} hidden{% endif %}" id="form-group-{{ field.vars.name }}">
            {{ form_label(field) }}
            {{ form_widget(field) }}
            {% if field.vars.errors|length > 0 %}
                <div class="form-error">{{ form_errors(field) }}</div>
            {% endif %}
        </div>
    {% endif %}
{% endfor %}

{# Champ adresse destinataire pour les dépôts (lecture seule) #}
<div class="form-group" id="deposit-address-group">
    <label>Adresse destinataire</label>
    <div class="deposit-address-box">
        <span class="deposit-address-value" id="depositAddress">0x73e9a27083cbf23720397f05f2bbdd477c592ddd</span>
        <button type="button" class="copy-address-btn" onclick="copyDepositAddress()">Copier</button>
    </div>
    <p class="form-hint">Envoyez vos fonds à cette adresse pour effectuer votre dépôt.</p>
</div>

{{ form_rest(form) }}

<script>
// Fonction pour copier l'adresse de dépôt
function copyDepositAddress() {
    const address = document.getElementById('depositAddress').textContent;
    navigator.clipboard.writeText(address).then(() => {
        const btn = document.querySelector('.copy-address-btn');
        btn.textContent = 'Copié !';
        btn.classList.add('copied');
        setTimeout(() => {
            btn.textContent = 'Copier';
            btn.classList.remove('copied');
        }, 2000);
    });
}

(function() {
    function initFormToggle() {
        const typeSelect = document.querySelector('select[name="request_form[type]"]') ||
                          document.querySelector('select[id*="type"]');
        
        const publicAddressGroup = document.getElementById('form-group-publicAddress');
        const depositAddressGroup = document.getElementById('deposit-address-group');
        
        if (!typeSelect || !publicAddressGroup || !depositAddressGroup) {
            setTimeout(initFormToggle, 100);
            return;
        }
        
        function toggleFields() {
            const selectedOption = typeSelect.options[typeSelect.selectedIndex];
            const selectedText = selectedOption ? selectedOption.text.trim().toLowerCase() : '';
            
            // Vérifier si le texte contient "retrait" ou "dépôt"
            const isWithdrawal = selectedText === 'retrait' || selectedText.includes('retrait');
            const isDeposit = selectedText === 'dépôt' || selectedText.includes('dépôt') || selectedText.includes('depot');
            
            // Afficher/masquer le champ publicAddress pour les retraits
            if (isWithdrawal) {
                publicAddressGroup.classList.remove('hidden');
                publicAddressGroup.classList.add('show');
                publicAddressGroup.style.display = 'block';
                const input = publicAddressGroup.querySelector('input');
                if (input) {
                    input.setAttribute('required', 'required');
                }
            } else {
                publicAddressGroup.classList.add('hidden');
                publicAddressGroup.classList.remove('show');
                publicAddressGroup.style.display = 'none';
                const input = publicAddressGroup.querySelector('input');
                if (input) {
                    input.removeAttribute('required');
                    input.value = '';
                }
            }
            
            // Afficher/masquer l'adresse destinataire pour les dépôts
            if (isDeposit) {
                depositAddressGroup.classList.add('show');
                depositAddressGroup.style.display = 'block';
            } else {
                depositAddressGroup.classList.remove('show');
                depositAddressGroup.style.display = 'none';
            }
        }
        
        // Masquer par défaut
        publicAddressGroup.style.display = 'none';
        depositAddressGroup.style.display = 'none';
        
        // État initial
        toggleFields();
        
        // Écouter les changements
        typeSelect.addEventListener('change', toggleFields);
    }
    
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initFormToggle);
    } else {
        initFormToggle();
    }
})();
</script>


{% extends 'base.html.twig' %}

{% block title %}Modifier Transaction ‚Äî Centralink{% endblock %}

{% block stylesheets %}
<style>
    .content-wrapper {
        padding: 2rem 0;
        min-height: calc(100vh - 80px);
        display: flex;
        align-items: flex-start;
        justify-content: center;
    }

    .form-card {
        background: var(--color-bg-secondary);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-lg);
        padding: 2.5rem;
        width: 100%;
        max-width: 500px;
    }

    .form-header {
        margin-bottom: 2rem;
    }

    .form-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .form-subtitle {
        color: var(--color-text-muted);
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--color-text-muted);
        margin-bottom: 1.5rem;
        font-size: 0.9rem;
    }

    .back-link:hover {
        color: var(--color-text);
    }

    .danger-zone {
        margin-top: 3rem;
        padding-top: 2rem;
        border-top: 1px solid var(--color-border);
    }

    .danger-zone h3 {
        color: #ef4444;
        font-size: 1rem;
        margin-bottom: 1rem;
    }
</style>
{% endblock %}

{% block body %}
<div class="content-wrapper">
    <div class="form-card">
        <a href="{{ path('app_transaction_index') }}" class="back-link">
            ‚Üê Retour aux transactions
        </a>

        <div class="form-header">
            <h1 class="form-title">‚úèÔ∏è Modifier Transaction</h1>
            <p class="form-subtitle">{{ transaction.cryptoType.symbol }} ‚Äî {{ transaction.amount|number_format(4) }}</p>
        </div>

        {{ form_start(form) }}
            {% include 'transaction/_form.html.twig' %}

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    üíæ Enregistrer
                </button>
                <a href="{{ path('app_transaction_index') }}" class="btn btn-secondary">
                    Annuler
                </a>
            </div>
        {{ form_end(form) }}

        <div class="danger-zone">
            <h3>‚ö†Ô∏è Zone dangereuse</h3>
            <form action="{{ path('app_transaction_delete', {id: transaction.id}) }}" method="post" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette transaction ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ transaction.id) }}">
                <button type="submit" class="btn btn-secondary" style="border-color: #ef4444; color: #ef4444;">
                    üóëÔ∏è Supprimer
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}




